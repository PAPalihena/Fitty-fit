<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/navigationBar"
        layout="@layout/navigation_bar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Personal Challenges Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Challenges"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0c0d0d"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level 3 - Fitness Enthusiast"
                        android:textSize="16sp"
                        android:textColor="@color/orange"
                        android:layout_marginBottom="16dp"/>

                    <!-- Challenge 1 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/light_gray"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="30-Day Running Challenge"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#0c0d0d"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Run 5km daily for 30 days"
                                android:textSize="14sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginBottom="8dp"/>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                app:trackThickness="8dp"
                                android:progress="50"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="15/30 days completed"
                                android:textSize="12sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginTop="4dp"
                                android:gravity="end"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Challenge 2 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/light_gray"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Push-up Challenge"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#0c0d0d"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Complete 100 push-ups daily"
                                android:textSize="14sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginBottom="8dp"/>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                app:trackThickness="8dp"
                                android:progress="75"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="75/100 push-ups completed"
                                android:textSize="12sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginTop="4dp"
                                android:gravity="end"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Group Challenges Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Group Challenges"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0c0d0d"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level 2 - Team Player"
                        android:textSize="16sp"
                        android:textColor="@color/orange"
                        android:layout_marginBottom="16dp"/>

                    <!-- Group Challenge 1 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/light_gray"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Team Marathon Challenge"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#0c0d0d"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Complete a marathon as a team of 4"
                                android:textSize="14sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginBottom="8dp"/>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                app:trackThickness="8dp"
                                android:progress="60"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3/4 team members completed"
                                android:textSize="12sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginTop="4dp"
                                android:gravity="end"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Group Challenge 2 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/light_gray"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Weekly Group Workout"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#0c0d0d"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Complete 3 group workouts this week"
                                android:textSize="14sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginBottom="8dp"/>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                app:trackThickness="8dp"
                                android:progress="33"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1/3 workouts completed"
                                android:textSize="12sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginTop="4dp"
                                android:gravity="end"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout> 