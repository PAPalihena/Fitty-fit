<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homepage_bg_transparent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Challenges"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0c0d0d"
                android:layout_marginBottom="24dp"/>

            <!-- Personal Challenges Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Challenges"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0c0d0d"
                        android:layout_marginBottom="16dp"/>

                    <!-- Challenge Items -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/orange"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/personalChallengeDesc1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10,000 Steps Daily Challenge"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#0c0d0d"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complete 10,000 steps for 30 days"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp"/>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/personalChallengeProgress1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                android:progress="65"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Group Challenges Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Group Challenges"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0c0d0d"
                        android:layout_marginBottom="16dp"/>

                    <!-- Challenge Items -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/orange"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/groupChallengeDesc1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Team Workout Challenge"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#0c0d0d"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complete 3 team workouts this week"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp"/>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/groupChallengeProgress1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                android:progress="45"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout> 