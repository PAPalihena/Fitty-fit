<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/navigationBar"
        layout="@layout/navigation_bar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Section -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome Back, Praveen!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0c0d0d"
                android:layout_marginBottom="24dp"/>

            <!-- Progress Dashboard -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today's Progress"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0c0d0d"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/waterProgress"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginBottom="8dp"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                app:indicatorSize="80dp"
                                app:trackThickness="8dp"
                                android:progress="75"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Water"
                                android:textSize="14sp"
                                android:textColor="#0c0d0d"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/caloriesProgress"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginBottom="8dp"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                app:indicatorSize="80dp"
                                app:trackThickness="8dp"
                                android:progress="60"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calories"
                                android:textSize="14sp"
                                android:textColor="#0c0d0d"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/stepsProgress"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginBottom="8dp"
                                app:trackColor="@color/light_gray"
                                app:indicatorColor="@color/orange"
                                app:indicatorSize="80dp"
                                app:trackThickness="8dp"
                                android:progress="85"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Steps"
                                android:textSize="14sp"
                                android:textColor="#0c0d0d"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Challenges Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Challenges"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0c0d0d"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Personal Challenge"
                            android:textSize="16sp"
                            android:textColor="#0c0d0d"
                            android:layout_marginBottom="4dp"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/personalChallengeProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:trackColor="@color/light_gray"
                            app:indicatorColor="@color/orange"
                            app:trackThickness="8dp"
                            android:progress="50"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Group Challenge"
                            android:textSize="16sp"
                            android:textColor="#0c0d0d"
                            android:layout_marginBottom="4dp"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/groupChallengeProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:trackColor="@color/light_gray"
                            app:indicatorColor="@color/orange"
                            app:trackThickness="8dp"
                            android:progress="75"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Health Tips Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Health Tips"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0c0d0d"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/healthTipsTabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabMode="fixed"
                        app:tabGravity="fill"/>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/healthTipsViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout> 